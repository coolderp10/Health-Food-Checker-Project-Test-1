{
  "manifest_version": 3,
  "name": "HealthyMenu",
  "version": "1.0.0",
  "description": "Rates the healthiness of fast-food items on DoorDash & UberEats and lets you score custom foods.",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": [
    "https://www.doordash.com/*",
    "https://*.doordash.com/*",
    "https://www.ubereats.com/*",
    "https://*.ubereats.com/*"
  ],
  "action": {
    "default_title": "HealthyMenu",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.doordash.com/*",
        "https://*.doordash.com/*",
        "https://www.ubereats.com/*",
        "https://*.ubereats.com/*"
      ],
      "js": ["contentScript.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
